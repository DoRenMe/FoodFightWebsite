<div id="navbar">
  <a class="LogoBar" href="home">Food Fight</a>
  <a class="navlink" href="FoodtestMain.html">Home</a>
  <a class="navlink" href="Foodinfo.html">Resources</a>
  <a class="navlink" href="FoodPedia.html">Foodpedia</a>
</div>

<script>
window.onscroll = function() {myFunction()};
var navbar = document.getElementById("navbar");
var sticky = navbar.offsetTop;
function myFunction() {
  if (window.pageYOffset >= sticky) {
    navbar.classList.add("sticky")
  } else {
    navbar.classList.remove("sticky");
  }
}
</script>
